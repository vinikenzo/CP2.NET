@model CP2_.NET.Models.Produto

<h2>Editar Produto</h2>

<form asp-action="EditarProduto" method="post">
    <input type="hidden" asp-for="IdProduto" />

    <label>Nome:</label>
    <input asp-for="Nome" /><br />

    <label>Categoria:</label>
    <input asp-for="Categoria" /><br />

    <label>Quantidade:</label>
    <input asp-for="Quantidade" type="number" /><br />

    <label>Preço:</label>
    <input asp-for="Preco" type="number" step="0.01" /><br />

    <label>Responsável:</label>
    <select asp-for="IdFuncionario"
            asp-items="new SelectList(ViewBag.Funcionarios, nameof(CP2_.NET.Models.Funcionario.IdFuncionario), nameof(CP2_.NET.Models.Funcionario.Nome))">
    </select><br />

    <button type="submit">Salvar</button>
</form>

<a asp-action="ListarProdutos">Voltar</a>