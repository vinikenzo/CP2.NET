@model CP2_.NET.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<style>
    .form-container {
        background-color: #0a0a1a;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 0 15px #00ffff33;
        max-width: 500px;
        margin: 40px auto;
        color: #e0e0e0;
    }

    h2 {
        text-align: center;
        color: #00ffff;
        margin-bottom: 25px;
    }

    label {
        display: block;
        font-weight: bold;
        color: #00ffff;
        margin-top: 10px;
    }

    input[type="text"],
    input[type="number"],
    select {
        width: 100%;
        padding: 10px;
        border-radius: 25px;
        border: 1px solid #00ffff;
        background-color: #111;
        color: #e0e0e0;
        margin-top: 5px;
        margin-bottom: 10px;
        outline: none;
        transition: 0.3s;
    }

    input:focus,
    select:focus {
        box-shadow: 0 0 10px #00ffff;
        border-color: #00cccc;
    }

    button {
        background-color: #00ffff;
        color: #000;
        font-weight: bold;
        border: none;
        border-radius: 25px;
        padding: 10px 20px;
        width: 100%;
        margin-top: 15px;
        transition: 0.3s;
    }

    button:hover {
        background-color: #00cccc;
        transform: scale(1.05);
    }

    a {
        display: inline-block;
        margin-top: 20px;
        color: #00ffff;
        text-decoration: none;
        transition: 0.3s;
    }

    a:hover {
        color: #80ffff;
        text-decoration: underline;
    }
</style>

<div class="form-container">
    <h2>Cadastrar Produto</h2>

    <form asp-action="CadastrarProduto">
        <label>Nome:</label>
        <input asp-for="Nome" type="text" required />

        <label>Categoria:</label>
        <input asp-for="Categoria" type="text" required />

        <label>Quantidade:</label>
        <input asp-for="Quantidade" type="number" min="1" required />

        <label>Preço (R$):</label>
        <input asp-for="Preco" type="number" step="0.01" required />

        <label>Responsável:</label>
        <select asp-for="IdFuncionario"
                asp-items="new SelectList(ViewBag.Funcionarios, nameof(CP2_.NET.Models.Funcionario.IdFuncionario), nameof(CP2_.NET.Models.Funcionario.Nome))">
            <option value="">Selecione...</option>
        </select>

        <button type="submit">Salvar</button>
    </form>

    <div class="text-center">
        <a asp-action="ListarProdutos">← Voltar</a>
    </div>
</div>
